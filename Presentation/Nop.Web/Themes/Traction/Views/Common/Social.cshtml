@using Nop.Core
@using Nop.Core.Infrastructure
@using Nop.Services.Configuration

@model Nop.Web.Models.Common.SocialModel

@{
	var twitterlinkname = "@B2BPromotion";
	var instagramlinkname = "@B2BPromotion";
    var storeId = EngineContext.Current.Resolve<IStoreContext>().CurrentStore.Id;
    var settingService = EngineContext.Current.Resolve<ISettingService>();
    var pinterestUrl = EngineContext.Current.Resolve<ISettingService>().GetSettingByKey("tractionthemesettings.pinteresturl", String.Empty, storeId, true);
    var vimeoUrl = EngineContext.Current.Resolve<ISettingService>().GetSettingByKey("tractionthemesettings.vimeourl", String.Empty, storeId, true);
    var instagramUrl = EngineContext.Current.Resolve<ISettingService>().GetSettingByKey("tractionthemesettings.instagramurl", String.Empty, storeId, true);
	var linkedInUrl = EngineContext.Current.Resolve<ISettingService>().GetSettingByKey("tractionthemesettings.linkedinurl", String.Empty, storeId, true);
}

<ul class="social-sharing">
	@if (!String.IsNullOrEmpty(Model.FacebookLink))
    {
        <li><a target="_blank" class="facebook" href="@Model.FacebookLink">facebook.com/B2BPromotion</a></li>
    }
    @if (!String.IsNullOrEmpty(Model.TwitterLink))
    {
        <li><a target="_blank" class="twitter" href="@Model.TwitterLink">@twitterlinkname</a></li>
    }
	@if (!String.IsNullOrEmpty(instagramUrl))
    {
        <li><a target="_blank" class="instagram" href="@instagramUrl">@instagramlinkname</a></li>
    }
    @if (!String.IsNullOrEmpty(linkedInUrl))
    {
        <li><a target="_blank" class="linkedin" href="@linkedInUrl">linkedin.com/B2BPromotion</a></li>
    }
    @if (!String.IsNullOrEmpty(Model.YoutubeLink))
    {
        <li><a target="_blank" class="youtube" href="@Model.YoutubeLink"></a></li>
    }
    @if (!String.IsNullOrEmpty(Model.GooglePlusLink))
    {
        <li><a target="_blank" class="google" href="@Model.GooglePlusLink">Google My Business</a></li>
    }
    @if (!String.IsNullOrEmpty(pinterestUrl))
    {
        <li><a target="_blank" class="pinterest" href="@pinterestUrl"></a></li>
    }
    @if (!String.IsNullOrEmpty(vimeoUrl))
    {
        <li><a target="_blank" class="vimeo" href="@vimeoUrl"></a></li>
    }
    @if (Model.NewsEnabled)
    {
        <li><a target="_blank" class="rss" href="@Url.RouteUrl("NewsRSS", new {languageId = Model.WorkingLanguageId})"></a></li>
    }
</ul>