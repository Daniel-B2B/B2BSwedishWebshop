<!-- Trigger the modal with a button -->
<div id="quick_quote_wrapper">
    <div class="row">
        <div class="col-md-6">
            <button type="button" class="btn btn-info btn-lg" id="quick_quote_button">Vareprøveforespørgsel</button>
        </div>
